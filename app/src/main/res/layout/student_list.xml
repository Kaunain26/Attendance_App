<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="#e2f3f4"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/rlStdPastAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background"
        android:baselineAligned="false"
        android:foreground="?attr/selectableItemBackground"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Kaunain Nesar"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtStdUsn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/txtStudentName"
            android:text="- 4KM18CS025"
            android:textSize="15sp"
            android:textStyle="normal" />

        <CheckBox
            android:id="@+id/mCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgArrowNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/arrow_next"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
